{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    // "allowJs": false,
    "skipLibCheck": true,
    "noUnusedParameter": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "ES2022"],
    "types": ["vite/client", "node", "vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": ".",
     "paths": {
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "@types/*": ["src/types/*"],
    }
  },
   "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
